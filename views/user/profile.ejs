<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="mb-4">Your Profile</h1>
    </div>
    <div class="card shadow-lg mx-auto" style="max-width: 600px; border-radius: 10px;">
        <div class="card-body p-4">
            <h3 class="text-center text-primary">Welcome, <%= user.username %>!</h3>
            <hr class="my-4">
            <p class="fs-5"><strong>Email:</strong> <%= user.email %></p>
            <p class="fs-5"><strong>Username:</strong> <%= user.username %></p>
            <div class="text-center mt-4">
                <a href="/user/logout" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
