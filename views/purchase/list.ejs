<!-- views/purchase/list.ejs -->
<%- include('partials/header') %>

<h2 class="text-center mb-4">Your Purchases</h2>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% purchases.forEach(purchase => { %>
        <tr>
          <td><%= purchase.productName %></td>
          <td><%= purchase.quantity %></td>
          <td><%= purchase.totalPrice %></td>
          <td><%= purchase.status %></td>
          <td>
            <a href="/purchase/<%= purchase.id %>" class="btn btn-info">View Details</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
