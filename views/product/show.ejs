<%- include('../partials/header') %>

<div class="container my-5">
  <h1 class="mb-4 text-center text-primary font-weight-bold">Product Details</h1>
  <div class="card p-4 shadow-lg border-0 rounded-lg">
    <div class="row justify-content-center align-items-center">
      <!-- Left Column for Product Details -->
      <div class="col-md-6">
        <h3 class="text-success mb-3 text-uppercase font-weight-bold"><%= product.name %></h3>
        <p><strong>ID:</strong> <%= product.id %></p>
        <p><strong>Price:</strong> $<%= product.Price %></p>
        <p><strong>Description:</strong> <%= product.description %></p>
      </div>
      
      <!-- Right Column for Product Image -->
      <div class="col-md-6 text-center">
        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid rounded-lg shadow-sm">
      </div>
    </div>
  </div>

  <a href="/product" class="btn btn-outline-primary mt-4 rounded-pill px-4 py-2">Back to List</a>
</div>

<%- include('../partials/footer') %>
