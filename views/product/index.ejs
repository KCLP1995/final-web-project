<%- include('../partials/header') %>

<h1 class="mb-4">Product List</h1>
<a href="/product/create" class="btn btn-primary mb-3">Add New Product</a>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.name %></td>
                    <td><%= product.price.toFixed(2) %></td>
                    <td><%= product.description %></td>
                    <td>
                        <img src="<%= product.image || '/images/placeholder.jpg' %>" 
                             alt="<%= product.name %>" 
                             class="img-thumbnail" 
                             width="200" 
                             loading="lazy">
                    </td>
                    <td>
                        <a href="/product/<%= product.id %>" class="btn btn-info btn-sm mr-2">View</a>
                        <a href="/product/<%= product.id %>/edit" class="btn btn-warning btn-sm mr-2">Edit</a>
                        <form action="/product/<%= product.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteAlert(this, '<%= product.name %>')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteAlert(btn, itemName) {
        let formdel = btn.closest('form');
        Swal.fire({
            title: `Are you sure to delete "${itemName}"?`,
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                formdel.submit(); // Submit the form to delete the product
            } else {
                console.log(`Delete action canceled for "${itemName}".`);
            }
        });
    }
</script>

